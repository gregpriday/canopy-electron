{
  "name": "canopy-app",
  "version": "0.0.1",
  "description": "Canopy IDE - An Electron-based development environment",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm run build:main && cross-env NODE_ENV=development electron .\" \"vite\"",
    "dev:vite": "vite",
    "dev:electron": "npm run build:main && cross-env NODE_ENV=development electron .",
    "build:main": "tsc -p electron/tsconfig.json",
    "build": "tsc && vite build && npm run build:main",
    "package": "npm run build && electron-builder",
    "rebuild": "electron-rebuild -f -w node-pty",
    "postinstall": "electron-rebuild -f -w node-pty",
    "preview": "vite preview",
    "lint": "eslint ."
  },
  "dependencies": {
    "@octokit/graphql": "^9.0.3",
    "@radix-ui/react-slot": "^1.2.4",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^5.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "execa": "^9.6.0",
    "lucide-react": "^0.555.0",
    "node-pty": "^1.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "simple-git": "^3.30.0",
    "strip-ansi": "^7.1.2",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^22.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.canopy.ide",
    "productName": "Canopy",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "nodeGypRebuild": true,
    "buildDependenciesFromSource": true,
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
